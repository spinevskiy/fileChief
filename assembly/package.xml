<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
  http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- Directories -->
		<fileSet>
			<directory>${project.basedir}/assembly/</directory>
			<outputDirectory>logs/</outputDirectory>
			<directoryMode>0750</directoryMode>
			<excludes>
	          <exclude>*/**</exclude>
    	    </excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/assembly/</directory>
			<outputDirectory>data/</outputDirectory>
			<directoryMode>0750</directoryMode>
			<excludes>
	          <exclude>*/**</exclude>
    	    </excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/assembly/empty/</directory>
			<outputDirectory>conf/</outputDirectory>
			<directoryMode>0750</directoryMode>
		</fileSet>
		<!-- Directories / Files 
		<fileSet>
			<directory>${project.basedir}/sampleconf/</directory>
			<outputDirectory>conf/sampleconf/</outputDirectory>
			<directoryMode>0750</directoryMode>
			<fileMode>0640</fileMode>
		</fileSet>
-->
		<!-- Files -->
		<fileSet>
			<directory>${project.basedir}/scripts/</directory>
			<outputDirectory/>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>run.sh</include>
				<include>param.sh</include>
			</includes>
			<fileMode>0750</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/scripts/</directory>
			<outputDirectory/>
			<lineEnding>dos</lineEnding>
			<includes>
				<include>start.bat</include>
				<include>stop.bat</include>
				<include>test.bat</include>
				<include>param.bat</include>
			</includes>
			<fileMode>0640</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/scripts/</directory>
			<outputDirectory/>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>log4j.properties</include>
				<include>log4j.stop</include>
				<include>log4j.test</include>
			</includes>
			<fileMode>0640</fileMode>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.basedir}/LICENSE</source>
			<lineEnding>dos</lineEnding>
			<fileMode>0640</fileMode>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<directoryMode>0750</directoryMode>
			<fileMode>0640</fileMode>
			<outputDirectory>lib/</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>